.slide-indicator-wrap
  display flex

  justify-content center
  align-items center

  position fixed
  top 0
  right 32px
  bottom 0
  z-index 200

  width 48px

.slide-indicator-list, .slide-indicator-list *
  transition all 200ms ease

.slide-indicator-list
  display flex
  flex-direction column
  justify-content center
  align-items center
  grid-gap 1px

  width 100%

.slide-indicator-item
  position relative

  display flex
  justify-content center
  align-items center

  width 100%
  height 32px

  cursor pointer

  opacity .5

.slide-indicator-item .title
  position absolute
  right 0
  white-space nowrap
  opacity 0
  pointer-events none

.slide-indicator-item .point
  width 8px
  height 8px
  border-radius 16px
  background-color #ffffff
  filter drop-shadow(0 0 1px #ffffff)


.slide-indicator-list:hover
  opacity 1

.slide-indicator-list:hover .slide-indicator-item
  background-color rgba(255, 255, 255, .2)

.slide-indicator-item.active,
.slide-indicator-item:hover
  opacity 1

.slide-indicator-item.active .title
  right 80%
  opacity 1

.slide-indicator-list:hover .title
  right 120%
  opacity 1

.slide-indicator-item.active .point
  filter drop-shadow(0 0 5px #ffffff)

.slide-indicator-item:hover .point
  width 12px
  height 12px