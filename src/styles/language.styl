.language
  display flex
  flex-direction column
  justify-content center
  align-items center
  grid-gap 1px

  position fixed
  top 10px
  right 10px
  z-index 210

.language button
  width 100%
  border unset
  background-color rgba(255, 255, 255, .2)
  color #ffffff
  overflow hidden

  max-height 0
  padding 0
  font-size 0
  opacity 0

  transition all 300ms ease

.language button:hover
  background-color rgba(255, 255, 255, .4)

.language:hover button,
.language button.current
  max-height 100%
  padding 10px 30px
  font-size 16px
  cursor pointer
  opacity 1

.language button.current
  padding 10px
  background-color rgba(255, 255, 255, .4)
  cursor default
