html
  background-color black
  color white

body
  opacity 0
  overflow-x hidden
  animation AnimBody 1000ms ease-in-out 100ms both
  cursor default

 /* Hide scrollbar for Chrome, Safari and Opera */
html::-webkit-scrollbar,
body::-webkit-scrollbar
  display none

/* Hide scrollbar for IE, Edge and Firefox */
html, body
  -ms-overflow-style none  /* IE and Edge */
  scrollbar-width none  /* Firefox */

@keyframes AnimBody
  from { opacity: 0; }
  to { opacity: 1; }



button[goto-slide]
  position relative

  margin inherit
  padding inherit
  border inherit
  background inherit
  text-decoration underline
  font-size inherit
  color inherit
  cursor pointer

  transition all 100ms ease

button[goto-slide]:hover
  text-decoration-color transparent
